<div id="<%= dom_id post %>">
  <p>
    <strong>Post ID:</strong>
    <%= post.id %>
  </p>
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= post.author %>
  </p>

  <p>
    <strong>Likes:</strong>
    <%= post.likes %>
  </p>

  <p>
    <strong>Comments:</strong>
    <%= post.comments %>
  </p>

</div>
